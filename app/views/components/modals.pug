//- Users
div(tabindex="-1", class="modal fade", id="modal-form-user", aria-hidden="true")
	div(class="modal-dialog")
		div(class="modal-content", id="user-content-add")
			div(class="modal-header")
				h2(class="pmd-card-title-text", style="min-width: 300px;") Tambah User
			
			div(class="modal-body")
				form(class="form-horizontal")
					div(class="form-group pmd-textfield pmd-textfield-floating-label")
						label(for="first-name") Username
						input(type="text", class="mat-input form-control", id="username", autocomplete="off")
						//- span(class="help-text") required! 
					div(class="form-group pmd-textfield pmd-textfield-floating-label")
						label(for="first-name") Email
						input(type="email", class="mat-input form-control", id="email", autocomplete="off")
					
					div(class="form-group pmd-textfield pmd-textfield-floating-label")
						label(for="first-name") Role
						select(class="mat-input form-control", id="role")
							option(value="user") User
							option(value="admin") Admin
					
					div(class="form-group pmd-textfield pmd-textfield-floating-label")
						label(for="first-name") Password
						input(type="password", class="mat-input form-control", id="password")
					
					div(class="form-group pmd-textfield pmd-textfield-floating-label")
						label(for="first-name") Konfirmasi Password
						input(type="password", class="mat-input form-control", id="confirm")
					
					div(class="form-group pmd-textfield pmd-textfield-floating-label")
						label(class="control-label") Keterangan
						textarea(required class="form-control", id="description")
					
			div(class="pmd-modal-action pmd-modal-bordered text-right")
				button(data-dismiss="modal", class="btn pmd-ripple-effect btn-danger", style="float: left;", type="button") Batalkan
				button(class="btn pmd-ripple-effect btn-primary", type="button", onclick="fn.createNewUser()") Simpan
		div(class="modal-content", id="user-content-change-password")
			div(class="modal-header")
				h2(class="pmd-card-title-text", style="min-width: 300px;") Change User
			
			div(class="modal-body")
				form(class="form-horizontal")
					div(class="form-group pmd-textfield")
						label(for="first-name") Role
						select(class="mat-input form-control", id="edit-role")
							option(value="user") User
							option(value="admin") Admin
					
					div(class="form-group pmd-textfield")
						label(for="first-name") Password
						input(type="password", class="mat-input form-control", id="edit-password")
					
					div(class="form-group pmd-textfield")
						label(for="first-name") Konfirmasi Password
						input(type="password", class="mat-input form-control", id="edit-confirm")
					
					div(class="form-group pmd-textfield")
						label(class="control-label") Keterangan
						textarea(required class="form-control", id="edit-description")
					
			div(class="pmd-modal-action pmd-modal-bordered text-right")
				button(data-dismiss="modal", class="btn pmd-ripple-effect btn-danger", style="float: left;", type="button") Batalkan
				button(class="btn pmd-ripple-effect btn-primary", type="button", onclick="fn.updateUser(this)", id="btn-user-save") Simpan

